<%# 検索 %>
<% form_tag :action => "search" do %>
	<%= text_field_tag :search_word, @search_word, { :size => '50' } %>
	<%= radio_button_tag( :search_type, "title", checked = @title_checked, options = {} ) %>タイトル
	<%= radio_button_tag( :search_type, "note", checked = @note_checked, options = {} ) %>テキスト
	<%= submit_tag "検索", :disable_with => "検索" %>
<% end %>
