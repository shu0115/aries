<div class="radius_border">
<table><tr><td>
<%# カテゴリリスト %>
<%#= link_to 'ALL', "/memos/list" %>
<% @categorys.each_with_index{ |category, index| %><% if category[:category].to_s == @category.to_s %><span class="active_link"><%= link_to category[:category], "/memos/list/#{category[:category]}" %></span><% else %><%= link_to category[:category], "/memos/list/#{category[:category]}" %><% end %>　<wbr /><% } %><br />
</td></tr></table>
</div>

<br />
<br />

<%# 検索 %>
<%= render :partial =>'search_area' %>

<br />
<br />

<%# NEW %>
<span class="menu new"><%= link_to $link[:new], { :action => "new", :id => @category } %></span><br />

<br />

<% @category = 'all' if @category.blank? %>
<span class="mode"><%= link_to '公開', { :action => "list", :id => @category, :option => "public" } %> | <%= link_to '非公開', { :action => "list", :id => @category, :option => "private" } %> | <%= link_to 'リセット', { :action => "list", :id => @category, :option => "reset" } %></span><br />

<table class="table_style">
  <tr>
    <th>カテゴリ</th>
    <th>タイトル</th>
    <th>モード</th>
  </tr>

<% @all_memos.each do |memo| %>
  <tr>
    <td>[<%= link_to memo.category, { :action => "list", :id => memo.category } %>]</td>
    
    <td><%=h memo.title %></td>
    <td><%=h $mode_hash[memo.mode.to_s] %></td>

    <td class="menu show"><%= link_to $link[:show], { :action => "show", :id => memo.id, :option => @category }, :title => memo.note %></td>
    <td class="menu edit"><%= link_to $link[:edit], { :action => "edit", :id => memo.id, :option => @category } %></td>
    <td class="menu delete"><%= link_to $link[:delete], { :action => "destroy", :id => memo.id, :option => @category }, :confirm => "「#{memo.title}」を本当に削除してよろしいですか？" %></td>
  </tr>
<% end %>
</table>

<br />

<span class="menu new"><%= link_to $link[:new], { :action => "new", :id => @category } %></span>
